{
  "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "strict": true,
      "lib": ["es2020", "dom"],
      "jsx": "preserve",
      "module": "es2020",
      "moduleResolution": "node",
      "target": "es6",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "removeComments": true
  },
  "include": [
      "./src/**/*"
  ]
}
