{

  "manifest_version": 2,
  "name": "Ibiza Developer Extension",
  "version": "1.0",

  "description": "",

  "icons": {
    "48": "assets/icon-48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "assets/icon-48.png",
    "default_title": "Ibiza Developer Extension",
    "default_popup": "src/popup/menu.html"
  },

  "content_scripts": [
    {
      "matches": [ "*://*.portal.azure.com/*", "*://df.onecloud.azure-test.net/*" ],
      "js": [ "src/main.js" ]
    }
  ]

}
