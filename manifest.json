{

  "manifest_version": 2,
  "name": "Ibiza Developer Extension",
  "version": "1.0",

  "description": "",

  "icons": {
    "64": "assets/icon-64.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "assets/icon-64.png",
    "default_title": "Ibiza Developer Extension",
    "default_popup": "src/popup/menu.html"
  },

  "content_scripts": [
    {
      "matches": [ "*://*.portal.azure.com/*", "*://df.onecloud.azure-test.net/*" ],
      "js": [ "/src/third-party/jquery-3.2.1.min.js", "/src/content_scripts/create-bug.js", "src/main.js" ]
    }
  ]

}
